<h1>Posts by <%= @contributor.titleize %></h1>

<% if @contributor_posts.any? %>
  <ul>
    <% @contributor_posts.each do |post| %>
      <li><%= post.title %></li>
    <% end %>
  </ul>
<% else %>
  <p>No posts found for <%= @contributor.titleize %>.</p>
<% end %>

<%= link_to 'Back to all posts', wiki_posts_path %>